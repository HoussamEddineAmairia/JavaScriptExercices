<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Temperature Conversion from Celsius to Fahrenheit</title>
</head>
<body>
    <h1>Temperature Conversion from Celsius to Fahrenheit</h1>

    <label for='Celsius'>Enter Temperature in Celsius:</label>
    <input type='number' id='Celsius' />
    <button onclick= convert()>Convert</button>
    <p id="result"></p>

    <script>
        function ConversionFromCelsiusToFahrenheit (Celsius) { return (Celsius * (9/5) + 32)};

        function convert() {
            let Celsius = document.getElementById('Celsius').value;
            let Fahrenheit = ConversionFromCelsiusToFahrenheit (Celsius);
            document.getElementById('result').innerText = Celsius + ' C Equal To ' + Fahrenheit + ' F '; 
        }
    </script>
</body>
</html>
